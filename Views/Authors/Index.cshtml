@model IEnumerable<Booklovers.Models.Author>

@{
    ViewData["Title"] = "Authors";
}

<section class="hero-wrap hero-wrap-2 hero-wrap-lite ftco-degree-bg js-fullheight" style="background-color: #eee;"
    data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate pb-5 text-center">
                <form action="#" class="search-location mt-md-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-10 align-items-end">
                            <div class="form-group">
                                <div class="form-field">
                                    <h1 class="mb-3 bread">Authors</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
    <div class="row">
        @foreach (var item in Model) {
            <div class="col-md-4">
                <div class="property-wrap ftco-animate">
                    @if (item.ImageUrl == null || item.ImageUrl == "") {
                        <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Authors" class="img" style="background-image: url('https://www.mbrsg.ae/MBRSG/media/Images/no-image-icon-6.png');"></a>    
                    } else {
                        <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Authors" class="img" style="background-image: url(@item.ImageUrl);"></a>
                    }
                    <div class="text card-border">
                        <h3><a asp-action="Details" asp-route-id="@item.Id" asp-controller="Authors">@item.Name</a></h3>
                        <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Authors" class="d-flex align-items-center justify-content-center btn-custom">
                            <span class="ion-ios-create"></span>
                        </a>
                    </div>
                </div>
            </div>
        }
        
    </div>

    </div>
</section>